<html>
    <head>
        <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    </head>
    <body>
        <div class="container">
            <div class="jumbotron">
        <div>
            <a href="/" class="btn btn-primary">Home</a>
        </div>
        <h1>
            Projects List
        </h1>
        <% if(rows.length == 0) {%>
            <div class="alert alert-danger" role="alert">No Data Found</div>
        <% } else {%>
        <form action="/projects/search" method="post">
            <div class="form-group">
                <label for="projectname">Enter the Project Name </label>
                <input class="form-control form-control-lg" id="projectname" type="text" name="projectname" value="<%= rows[0].name %>" required>
            </div>
            <div>
                <input class="btn btn-primary mb-2"  type = "submit" value="Search">
            </div>
        </form>
        <table class="table table-hover table-bordered ">
            <thead>
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Body</th>
                <th scope="col">Status</th>
                <th scope="col">Assigner Email</th>
              </tr>
            </thead>
            <tbody>
                <% for(var i = 0; i < rows.length; i++) { %>
                <tr>
                    <td> <%= rows[i].name %></td>
                    <td>  <%= rows[i].body %></td>
                    <td>   <%= rows[i].status %></td>
                    <td>   <%= rows[i].assigner_email %></td>
                </tr>
                <% } %>
            </tbody>        
        </table>
        <% } %>
    </div>
</div>
    </body>
</html>