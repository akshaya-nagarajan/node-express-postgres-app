<html>
    <head>
        <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    </head>
    <body>
        <div class="container">
            <div class="jumbotron">
        <div>
            <a href="/" class="btn btn-primary">Home</a>
        </div>
            <h1> Task List </h1>
        
        <% if(rows.length == 0) {%>
            <div class="alert alert-danger" role="alert">No Data Found</div>
        <% } else {%>
        <form action="/tasks/search" method="post">
            <div class="form-group">
                <label class="col-form-label" for="taskname">Enter the Task Name </label>
                <input class="form-control form-control-lg" id="taskname" type="text" name="taskname" value="<%= rows[0].name %>" required>
            </div>
            <div>
                <input class="btn btn-primary mb-2" type="submit" value="Search">
            </div>
        </form>
        <table class="table table-hover table-bordered ">
            <thead>
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Score</th>
                <th scope="col">Status</th>
                <th scope="col">Project Name</th>
                <th scope="col">Assigner Email</th>
                <th scope="col">Assignee Email</th>
              </tr>
            </thead>
            <tbody>
                <% for(var i = 0; i < rows.length; i++) { %>
                <tr>
                    <td> <%= rows[i].name %></td>
                    <td>  <%= rows[i].description %></td>
                    <td>  <%= rows[i].score %></td>
                    <td>   <%= rows[i].status %></td>
                    <td>   <%= rows[i].project_name %></td>
                    <td>   <%= rows[i].assigner_email %></td>
                    <td>   <%= rows[i].assignee_email %></td>
                </tr>
                <% } %>
            </tbody>        
        </table>
        <% } %>
        </div>
    </div>
    </body>
</html>