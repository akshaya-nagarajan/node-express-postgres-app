<html>
    <head>
        <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    </head>
    <body>
        <div class="container">
        
        <div class="jumbotron">
            <div>
                <a href="/" class="btn btn-primary">Home</a>
            </div>
        <h1>
            Users List
        </h1>
        <% if(rows.length == 0) {%>
            <div class="alert alert-danger" role="alert">No Data Found</div>
        <% } else {%>
        <form action="/users/search" method="post">
            <div class="form-group">
                <label for="username">Enter the User Name </label>
                <input class="form-control form-control-lg" id="username" type="text" name="username" value="<%= rows[0].name %>" required>
            </div>
            <div class="form-group">
                <label for="surname">Enter the Surname </label>
                <input class="form-control form-control-lg" id="surname" type="text" name="surname" value="<%= rows[0].surname %>" required>
            </div>
            <div>
                <input class="btn btn-primary mb-2" type="submit" value="Search">
            </div>
        </form>
        
        <table class="table table-hover table-bordered ">
            <thead>
              <tr>
                <th scope="col">Email</th>
                <th scope="col">Name</th>
                <th scope="col">SurName</th>
              </tr>
            </thead>
            <tbody>
                <% for(var i = 0; i < rows.length; i++) { %>
                <tr>
                    <td> <%= rows[i].email %></td>
                    <td>  <%= rows[i].name %></td>
                    <td>   <%= rows[i].surname %></td>
                </tr>
                <% } %>
            </tbody>        
        </table>
        <% } %>
    </div>
    </div>
    </body>
</html>